<section class="detail-info">
    <h1>
        Database output page
    </h1>
    <form class="detail-info__form">
        <div>
            <label for="detail-info__input-id">
                Enter id number of the record you want to display
            </label>
            <input class="detail-info__input-id" id="detail-info__input-id" type="number" min="1">
        </div>
        <div>
            <input class="detail-info__submit" type="submit" value="Start">
        </div>
    </form>
    <div class="detail-info__output-id">
        <h2>
            Detail infromation for id â„–{{ idNumber }}
        </h2>
        {% for dep in staff.departments %}
            {{ dep.title }}
        {% endfor %}
        <ul>
            <li>
                {{ staff.fullName }}
            </li>
            <li>
                {{ staff.email }}
            </li>
            <li>
                {{ fullPhone }}
            </li>
            <li>
                {{ fullCreatedAt }}
            </li>
            <li>
                {{ fullSkills }}
            </li>
            <li>
                {{ fullComments }}
            </li>
        </ul>
    </div>
</section>